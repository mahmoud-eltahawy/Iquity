{
  "build": {
    "beforeBuildCommand": "cd frontend && bun install && trunk build --release index.html",
    "beforeDevCommand": "cd frontend && trunk serve index.html",
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:1420"
  },
  "productName": "iquity",
  "version": "0.4.0",
  "identifier": "com.eltahawy.iquity",
  "plugins": {
    "cli": {
      "args": [
        {
          "short": "p",
          "name": "path",
          "index": 1,
          "takesValue": true,
          "description": "file path"
        }
      ]
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "url": "/",
        "label": "preview",
        "title": "iquity preview"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: tauri://localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline'"
      }
    }
  }
}