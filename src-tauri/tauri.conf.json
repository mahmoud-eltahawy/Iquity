{
  "productName": "iquity",
  "version": "0.4.0",
  "identifier": "com.eltahawy.iquity",
  "build": {
    "beforeBuildCommand": "cd frontend && npm install && trunk build --release index.html",
    "beforeDevCommand": "cd frontend && trunk serve index.html",
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:1420"
  },
  "plugins": {
    "cli": {
      "args": [
        {
          "short": "p",
          "name": "path",
          "index": 1,
          "takesValue": true,
          "description": "file path"
        }
      ]
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "iquity",
        "width": 600,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}